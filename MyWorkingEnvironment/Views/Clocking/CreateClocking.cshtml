@model MyWorkingEnvironment.Models.ClockingModel

@{
    ViewData["Title"] = "CreateClocking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateClocking</h1>

<h4>ClockingModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdEmployee" hidden class="control-label"></label>
                @Html.DropDownList("IdEmployee", new SelectList(@ViewBag.EmployeeList, "Value", "Text"), "Select Employee", new {@class="form-control"})
                <span asp-validation-for="IdEmployee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @Html.DropDownList("Type", new SelectList(Enum.GetValues(typeof(ClockingType))), "Select Type", new { @class = "form-control"})
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="In" class="control-label"></label>
                <input asp-for="In" class="form-control" />
                <span asp-validation-for="In" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Out" class="control-label"></label>
                <input asp-for="Out" class="form-control" />
                <span asp-validation-for="Out" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
