@model MyWorkingEnvironment.Models.ClockingModel

@{
    ViewData["Title"] = "EditClocking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditClocking</h1>

<h4>ClockingModel</h4>
