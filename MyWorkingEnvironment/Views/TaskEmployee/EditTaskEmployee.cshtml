@model MyWorkingEnvironment.Models.TaskEmployeeModel

@{
    ViewData["Title"] = "EditTaskEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditTaskEmployee</h1>

<h4>TaskEmployeeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="IdTaskEmployee" class="control-label"></label>
                <input asp-for="IdTaskEmployee" class="form-control" />
                <span asp-validation-for="IdTaskEmployee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEmployee" hidden class="control-label"></label>
                @Html.DropDownList("IdEmployee", new SelectList(@ViewBag.EmployeeList, "Value", "Text"), "Select Employee", new {@class="form-control"})
                <span asp-validation-for="IdEmployee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                @Html.DropDownList("Priority", new SelectList(Enum.GetValues(typeof(PriorityType))), "Select Priority", new { @class = "form-control"})
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
