@model MyWorkingEnvironment.Models.EmployeeModel

@{
    ViewData["Title"] = "DetailsEmployee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DetailsEmployee</h1>

<div>
    <h4>EmployeeModel</h4>
    <hr />
    <dl class="row">
        <dt hidden class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdEmployee)
        </dt>
        <dd hidden class="col-sm-10">
            @Html.DisplayFor(model => model.IdEmployee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
