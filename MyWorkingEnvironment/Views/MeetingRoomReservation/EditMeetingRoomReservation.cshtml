@model MyWorkingEnvironment.Models.MeetingRoomReservationModel

@{
    ViewData["Title"] = "EditMeetingRoomReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EditMeetingRoomReservation</h1>

<h4>MeetingRoomReservationModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="IdMeetingRoomReservation" class="control-label"></label>
                <input asp-for="IdMeetingRoomReservation" class="form-control" />
                <span asp-validation-for="IdMeetingRoomReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdReservation" hidden class="control-label"></label>
                @Html.DropDownList("IdReservation", new SelectList(@ViewBag.ReservationList, "Value", "Text"), "Select Reservation", new {@class="form-control"})
                <span asp-validation-for="IdReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMeetingRoom" hidden class="control-label"></label>
                @Html.DropDownList("IdMeetingRoom", new SelectList(@ViewBag.MeetingRoomList, "Value", "Text"), "Select Reservation", new {@class="form-control"})
                <span asp-validation-for="IdMeetingRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
